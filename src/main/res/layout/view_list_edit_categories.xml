<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow"
    android:id="@+id/Container_list_categories">


    <br.com.tolive.simplewalletpro.views.CustomTextView
        app:font="@string/app_font"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        android:textColor="@color/snow"
        android:layout_gravity="center_vertical"
        android:textSize="30sp"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:id="@+id/textView_list_category_name" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/button_add_old"
        android:id="@+id/imageView_list_category_edit"
        android:contentDescription="@android:string/untitled"/>

</LinearLayout>